<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <b>Content:</b>
  <%= @post.content %>
</p>

<% if @post.comment %>
  <p><%= @post.comment.content %></p>
<% else %>
  <p>No comments</p>
<% end %>

  


<%= link_to 'Edit', edit_post_path(@post) %> |
